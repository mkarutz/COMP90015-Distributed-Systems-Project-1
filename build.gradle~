task(runclient, dependsOn: 'classes', type: JavaExec) {
	main = 'activitystreamer.Client'
	classpath = sourceSets.main.runtimeClasspath
}

task(runserver, dependsOn: 'classes', type: JavaExec) {
	main = 'activitystreamer.Server'
	classpath = sourceSets.main.runtimeClasspath
	args ["-lp 4035"]
}


